@model IEnumerable<cafeteria_joy.Models.Facturacionarticulo>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10 d-flex align-items-center">
            <i class="bi bi-receipt h2" style="color: #1558a0;"></i>
            <h2 class="ms-3">Facturación Artículos</h2>
        </div>
        <div class="col-2 text-end d-flex justify-content-evenly align-items-center">
            <a class="btn btn-outline-primary" asp-action="Create" class="mr-3">
                <i class="bi bi-plus-circle h5"></i>
                &nbsp;
                New
            </a>
            <a asp-controller="Facturacionarticulos"
               asp-action="ImprimirVenta">
                <img src="~/img/pdf-logo.png" width="30px" alt="" />
            </a>
        </div>
    </div>

    <div class="card p-4">
        <table class="table datatable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NoFactura)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmpleadoNavigation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaVenta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Comentario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="height: 60px">
                        <td style="width: 30%;" class="align-middle">
                            <a asp-action="Details" asp-route-id="@item.FacturacionArticulosId">
                                @Html.DisplayFor(modelItem => item.NoFactura)
                            </a>
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Cliente)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.EmpleadoNavigation.Nombre)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.FechaVenta)
                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem => item.Comentario)
                        </td>
                        <td class="align-middle text-center">
                            @if (item.Estado)
                            {
                                <i class="bi bi-check-square-fill text-success h3"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-square-fill text-danger h3"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>