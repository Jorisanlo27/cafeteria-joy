@model cafeteria_joy.Models.Lineafactura

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Linea factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FacturacionArticulosId" class="control-label"></label>
                <select asp-for="FacturacionArticulosId" class="form-control" asp-items="ViewBag.FacturacionArticulosId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArticuloId" class="control-label"></label>
                <select asp-for="ArticuloId" class="form-control" asp-items="ViewBag.ArticuloId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnidadesVendidas" class="control-label"></label>
                <input asp-for="UnidadesVendidas" class="form-control" />
                <span asp-validation-for="UnidadesVendidas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
